<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="br.com.curiousguy.aerocar.feature.newcar.NewCarViewModelImpl"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/new_car_toolbar"
            layout="@layout/toolbar_default" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:animateLayoutChanges="true">

                <TextView
                    style="@style/InputTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_car.plate" />

                <EditText
                    style="@style/Input"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="7"
                    android:hint="@string/new_car.plate.hint"
                    android:text="@={viewModel.plate}"
                    android:onTextChanged="@{viewModel::onPlateTextChanged}"/>

                <TextView
                    style="@style/InputTitle"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_car.client_name"/>

                <EditText
                    style="@style/Input"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_car.client_name.hint"
                    android:text="@={viewModel.clientName}"
                    android:onTextChanged="@{viewModel::onClientNameTextChanged}"/>

                <TextView
                    style="@style/InputTitle"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_car.client_tel"/>

                <EditText
                    style="@style/Input"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:hint="@string/new_car.client_tel.hint"
                    android:text="@={viewModel.clientTel}"
                    android:onTextChanged="@{viewModel::onClientTelTextChanged}"
                    android:inputType="numberDecimal"/>

                <TextView
                    style="@style/InputTitle"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_car.type"/>

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingBottom="10dp"
                    android:weightSum="5"
                    android:onCheckedChanged="@{viewModel::onCarTypeChanged}">

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_small_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/new_car.type.small"
                        android:checked="@{viewModel.isSmallChecked}"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_medium_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.type.medium"
                        android:checked="@{viewModel.isMediumChecked}"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_big_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.type.big"
                        android:checked="@{viewModel.isBigChecked}"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_taxi_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.type.taxi"
                        android:checked="@{viewModel.isTaxiChecked}"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/car_uber_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.type.uber"
                        android:checked="@{viewModel.isUberChecked}"/>

                </RadioGroup>

                <TextView
                    android:visibility="@{viewModel.uberRegisterVisibility}"
                    style="@style/InputTitle"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_car.uber_registry"/>

                <EditText
                    android:visibility="@{viewModel.uberRegisterVisibility}"
                    style="@style/Input"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_car.uber_registry.hint"
                    android:text="@={viewModel.uberRegistry}"
                    android:onTextChanged="@{viewModel::onUberRegistryTextChanged}"/>

                <TextView
                    style="@style/InputTitle"
                    android:layout_marginTop="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_car.wash"/>

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingBottom="10dp"
                    android:weightSum="3"
                    android:onCheckedChanged="@{viewModel::onWashChanged}">

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_simple_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/new_car.wash.simple"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_wax_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.wash.wax"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_resin_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.wash.resin"/>

                </RadioGroup>

                <TextView
                    style="@style/InputTitle"
                    android:layout_marginTop="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_car.services"/>

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingBottom="10dp"
                    android:weightSum="3"
                    android:onCheckedChanged="@{viewModel::onServiceChanged}">

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_sanitation_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/new_car.services.sanitation"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_polishing_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.services.polishing"/>

                    <RadioButton
                        style="@style/NewCarRadioButton"
                        android:id="@+id/new_car_little_repairs_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/new_car.services.little_repairs"/>

                </RadioGroup>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:backgroundTint="@color/blue_light"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:text="@string/new_car.finished"
                    android:onClick="@{() -> viewModel.onOkClicked()}"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>