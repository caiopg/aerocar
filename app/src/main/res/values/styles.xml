<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <style name="Toolbar">
        <item name="elevation">4dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Toolbar.Default">
        <item name="android:background">@color/blue_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputTitle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle.Big">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Input">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NewWorkSessionRadioButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/new_work_session_radiobutton_state_selector</item>
        <item name="android:textColor">@drawable/new_work_session_radiobutton_textcolor_state_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24dp</item>
    </style>

</resources>
